# Coheron - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================

# OpenRouter API Key (Required)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Optional: Other API Keys (if using direct API access)
# ANTHROPIC_API_KEY=your_anthropic_key_here
# OPENAI_API_KEY=your_openai_key_here
# GOOGLE_API_KEY=your_google_key_here

# =============================================================================
# MODEL PREFERENCES
# =============================================================================

# Default model to use (will override config.yaml if set)
# DEFAULT_MODEL=deepseek/deepseek-r1-0528:free
# BACKUP_MODEL=anthropic/claude-3.5-sonnet

# Model-specific settings
# DEEPSEEK_TEMPERATURE=0.7
# CLAUDE_TEMPERATURE=0.6
# GPT4_TEMPERATURE=0.5

# =============================================================================
# RESEARCH CONFIGURATION
# =============================================================================

# Default research focus
# DEFAULT_CATEGORY=cavity_qed
# DEFAULT_POPULATION_SIZE=10
# DEFAULT_GENERATIONS=20

# Evolution parameters
# MUTATION_RATE=0.3
# CROSSOVER_RATE=0.7
# ELITE_RETENTION=0.2

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=logs/quantum_research.log
LOG_MAX_SIZE_MB=100

# Database configuration
DATABASE_PATH=data/research_history.db
BACKUP_INTERVAL_HOURS=24

# Performance settings
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT_SECONDS=300
RETRY_ATTEMPTS=3

# Output directories
RESULTS_DIR=results
PLOTS_DIR=plots
EXPORTS_DIR=exports

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Physics validation settings
ENABLE_PHYSICS_VALIDATION=true
STRICT_DIMENSIONAL_ANALYSIS=true
REQUIRE_UNIT_CONSISTENCY=true

# Evaluation thresholds
MINIMUM_SCORE_THRESHOLD=0.3
ELITE_SCORE_THRESHOLD=0.8
BREAKTHROUGH_SCORE_THRESHOLD=0.9

# Research quality settings
MIN_CONTENT_LENGTH=100
MAX_CONTENT_LENGTH=10000
REQUIRE_MATHEMATICAL_DERIVATIONS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode settings (for testing)
# DEBUG_MODE=false
# VERBOSE_LOGGING=false
# ENABLE_PROFILING=false
# SAVE_INTERMEDIATE_RESULTS=true

# Testing settings
# TEST_DATABASE_PATH=test_research.db
# MOCK_API_RESPONSES=false
# ENABLE_FAST_TESTING=false

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# Jupyter notebook settings
# JUPYTER_PORT=8888
# JUPYTER_TOKEN=your_jupyter_token_here

# Web interface settings
# WEB_PORT=8501
# WEB_HOST=localhost
# ENABLE_WEB_INTERFACE=false

# Monitoring and analytics
# ENABLE_TELEMETRY=false
# ANALYTICS_ENDPOINT=your_analytics_endpoint
# MONITORING_TOKEN=your_monitoring_token

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Rate limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_HOUR=1000

# Data retention
AUTO_CLEANUP_DAYS=30
KEEP_HIGH_SCORING_SOLUTIONS=true
ARCHIVE_OLD_RESULTS=true

# Privacy settings
ANONYMIZE_RESULTS=false
ENCRYPT_SENSITIVE_DATA=false